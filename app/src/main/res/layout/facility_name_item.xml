<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/bxSelectFacility"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"

        />


    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/bxSelectFacility"
        android:layout_toEndOf="@+id/bxSelectFacility"
        android:id="@+id/tvFacilityName"

        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"/>

    <!-- line seperating the layout items -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/accent"
        android:layout_below="@id/tvFacilityName"/>

</RelativeLayout>